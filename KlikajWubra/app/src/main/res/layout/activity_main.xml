<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9C74BFBF"
    android:backgroundTint="#9C74BFBF"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewTop"
        android:layout_width="378dp"
        android:layout_height="55dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:contextClickable="false"
        android:fontFamily="@font/alfa_slab_one"
        android:inputType="textMultiLine|textImeMultiLine"
        android:text="Kliknij W Å»ubra!"
        android:textAlignment="center"
        android:textColor="#C80E1E12"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.029" />

    <Button
        android:id="@+id/btn50Pkt"
        android:layout_width="366dp"
        android:layout_height="67dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:backgroundTint="#9C74BFBF"
        android:fontFamily="@font/alfa_slab_one"
        android:text="Dodaj 0.1% (50pkt)"
        android:textColor="#C80E1E12"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btn500Pkt"
        app:layout_constraintEnd_toEndOf="@+id/textViewTop"
        app:layout_constraintHorizontal_bias="0.644"
        app:layout_constraintStart_toStartOf="@+id/textViewTop"
        app:layout_constraintTop_toBottomOf="@+id/textViewWynik" />

    <TextView
        android:id="@+id/textViewProc"
        android:layout_width="95dp"
        android:layout_height="42dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/alfa_slab_one"
        android:text="1%"
        android:textAlignment="center"
        android:textColor="#C80E1E12"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textViewOpro"
        app:layout_constraintEnd_toEndOf="@+id/textViewTop"
        app:layout_constraintStart_toEndOf="@+id/textViewOpro"
        app:layout_constraintTop_toTopOf="@+id/textViewOpro" />

    <ImageButton
        android:id="@+id/ibtnClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:backgroundTint="#9C74BFBF"
        app:layout_constraintBottom_toTopOf="@+id/textViewProc"
        app:layout_constraintEnd_toEndOf="@+id/textViewTop"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/textViewTop"
        app:layout_constraintTop_toBottomOf="@+id/textViewTop"
        app:layout_constraintVertical_bias="0.517"
        app:srcCompat="@drawable/zubrowka_200_m" />

    <TextView
        android:id="@+id/textViewOpro"
        android:layout_width="219dp"
        android:layout_height="42dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/alfa_slab_one"
        android:text="Oprocentowanie:"
        android:textColor="#C80E1E12"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textViewWynik"
        app:layout_constraintEnd_toStartOf="@+id/textViewProc"
        app:layout_constraintStart_toStartOf="@+id/textViewTop"
        app:layout_constraintTop_toBottomOf="@+id/ibtnClick" />

    <TextView
        android:id="@+id/textViewWynik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/alfa_slab_one"
        android:text="Wynik:"
        android:textColor="#C80E1E12"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn50Pkt"
        app:layout_constraintEnd_toStartOf="@+id/textViewPkt"
        app:layout_constraintStart_toStartOf="@+id/textViewTop"
        app:layout_constraintTop_toBottomOf="@+id/textViewOpro" />

    <TextView
        android:id="@+id/textViewPkt"
        android:layout_width="232dp"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/alfa_slab_one"
        android:text="0pkt"
        android:textAlignment="center"
        android:textColor="#C80E1E12"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textViewWynik"
        app:layout_constraintEnd_toEndOf="@+id/textViewTop"
        app:layout_constraintStart_toEndOf="@+id/textViewWynik"
        app:layout_constraintTop_toTopOf="@+id/textViewWynik" />

    <Button
        android:id="@+id/btn500Pkt"
        android:layout_width="366dp"
        android:layout_height="67dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:backgroundTint="#9C74BFBF"
        android:fontFamily="@font/alfa_slab_one"
        android:text="Dodaj 1% (500pkt)"
        android:textColor="#C80E1E12"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textViewTop"
        app:layout_constraintHorizontal_bias="0.644"
        app:layout_constraintStart_toStartOf="@+id/textViewTop"
        app:layout_constraintTop_toBottomOf="@+id/btn50Pkt" />

</androidx.constraintlayout.widget.ConstraintLayout>